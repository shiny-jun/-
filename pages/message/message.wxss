/* pages/message/message.wxss */


page {
  background-color: rgba(46, 113, 106, 0.7);
  min-height: 100%;
}

.background {
  height: 100vh;
  width: 100vw;
  background: #2c6760 url('https://cloud-minapp-14328.cloud.ifanrusercontent.com/1fKCyfurTOKAQZSs.jpg') 0 0 no-repeat;
  background-size: 750rpx 100%;
  opacity: 0.4;
}
.close{
  position: absolute;
  top:20rpx;
  right: 20rpx;
}
.content {
  position: absolute;
  top: 0;
  left: 0;
  width: 600rpx;
  background-color: #5dafaf;
  min-height: 100%;
  opacity: 1;
}

.scroll-view_H {
  height: 100vh;
  white-space: nowrap;
}

.log{
  padding: 20rpx;
  padding-bottom: 0px;
}
.date{
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.message{
  margin-left: 30rpx;
  border-left: 1rpx solid rgba(255, 255, 255, 0.5);
  padding-top: 10rpx;
}
.message-item{
  display: flex;
  position: relative;
  left: -25rpx;
  padding: 15rpx 0;
  font-size: 30rpx;
  color: #ffc878;
}
.type{
  width: 15%;
}
.type image{
  background-color: #fff;
  border-radius: 25rpx;
}
.name{
  width: 65%;
}
.name text{
  font-weight: bold;
  padding-right: 6rpx;
}
.time{
  width: 20%;
  text-align: right;
  color: white
}